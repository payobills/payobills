; Please config file
; Leaving this file as is is enough to use plz to build your project.
; Please will stay on whatever version you currently have until you run
; 'plz update', when it will download the latest available version.
;
; Or you can uncomment the following to pin everyone to a particular version;
; when you change it all users will automatically get updated.
[please]
version = 17.0.0

[buildconfig]
default-docker-repo=ghcr.io/payobills

[build]
passenv=PROJECT_ROOT
passenv=PROJECT_NAME
passenv=ARCH
passenv=DOTNET_VERSION
passenv=DOTNET_RUNTIME_VERSION
passenv=VERSION
passenv=HELMCHART_VERSION
passenv=KUBECONFIG
passenv=RUST_VERSION

[Plugin "please-reuse"]
Target = //plugins:please_reuse

[Plugin "shell"]
Target = //plugins:shell

[Plugin "docker"]
Target = //plugins:docker

[parse]
preloadsubincludes = ///docker//build_defs:docker
preloadsubincludes = ///shell//build_defs:shell
